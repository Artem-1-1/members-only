<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
  <%- include("./partials/nav.ejs") %>
  <main class="page-content">
    <form class="form" action="/auth/register" method="POST">
      <h2 class="form-title">Register a new account</h2>
      <div class="formRow">
        <div class="rowLabel reg">
        <label for="fullname">Full name</label>
        <p>Required</p>
        </div>
        <input id="fullname" name="fullname" type="text" minlength="6" maxlength="50" placeholder="Full name" required>
      </div>
      <div class="formRow">
        <div class="rowLabel reg">
        <label for="username">Username</label>
        <p>Required</p>
        </div>
        <input id="username" name="username" type="text" placeholder="Username" required>
      </div>
      <div class="formRow">
        <div class="rowLabel reg">
        <label for="password">Password</label>
        <p>Required</p>
        </div>
        <input id="password" name="password" type="password" placeholder="Password" minlength="8" required>
      </div>
      <div class="formRow">
        <div class="rowLabel reg">
        <label for="conf_password">Confirm Password</label>
        <p>Required</p>
        </div>
        <input id="conf_password" name="conf_password" type="password" placeholder="Confirm Password" minlength="8" required>
      </div>
      <button class="regBtn" type="submit">Register</button>
    </form>
  </main>
</body>
</html>